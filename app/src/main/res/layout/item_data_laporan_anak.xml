<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_nama_anak"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center"
            android:padding="5dp"
            android:text="Nama Anak"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_nama_orang_tua"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center"
            android:padding="5dp"
            android:text="Nama Orang Tua"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_jenis_kelamin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center"
            android:padding="5dp"
            android:text="Jenis Kelamin"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_tgl_lahir"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center"
            android:padding="5dp"
            android:text="Tanggal Lahir"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="14sp"
            android:padding="5dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tv_asal_kota"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            
            android:gravity="center"
            android:padding="5dp"
            android:text="Asal Kota"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:text=" "
        android:textSize="14sp"
        android:padding="5dp"
        android:background="@android:color/black" />

</LinearLayout>